<div class="cocktail-display">
    <h2><%= @cocktail.name %></h2>

    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li> <%= link_to dose.ingredient.name, ingredient_path(dose.ingredient) %> |
        <em><%= dose.description %></em> |
        <%= link_to "Delete", dose_path(dose), class: "label label-warning", method: :delete %>
        </li>
      <% end %>
    </ul>

    <%= link_to 'Back', cocktails_path %>

    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description, label: "How much liquor?" %>
      <%= f.association :ingredient %>
      <%= f.submit "Add Ingredient", class: "btn btn-danger" %>
    <% end %>

</div>


